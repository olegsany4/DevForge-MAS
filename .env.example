# === App basics ===
APP_ENV=dev
LOG_LEVEL=INFO

# === Backend (FastAPI/UVicorn) ===
BACKEND_HOST=127.0.0.1
BACKEND_PORT=8000
RELOAD=true

# Для тулов мониторинга (tools/monitor/collect.py) можно задать health-URL.
# По умолчанию в коде используется http://127.0.0.1:8080/healthz — здесь даём явный пример для согласования портов.
# Если у вас бекенд слушает на 8000, как выше, то используйте:
BACKEND_HEALTH_URL=http://127.0.0.1:8000/health

# === Database (choose one) ===
# SQLite (по умолчанию)
DB_ENGINE=sqlite
DB_FILE=devforge_mas.sqlite3

# PostgreSQL (если используете)
# Рекомендуемый способ — задавать части URL отдельными переменными (не хардкодить креды в файле).
DB_ENGINE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=devforge_mas
DB_USER=postgres_user_placeholder   # замените на реального пользователя через секреты CI/локально вне VCS
DB_PASS=postgres_pass_placeholder   # замените на реальный пароль через секреты CI/локально вне VCS

# Полный URL может строиться в рантайме из переменных выше.
# Если всё же нужен готовый пример URL — оставляем закомментированным и помечаем как allowlist,
# чтобы detect-secrets не считался это инцидентом (это пример, а не реальный секрет).
# DB_URL=postgresql://${DB_USER}:${DB_PASS}@${DB_HOST}:${DB_PORT}/${DB_NAME}  # pragma: allowlist secret

# === Frontend ===
FRONTEND_HOST=127.0.0.1
FRONTEND_PORT=5173

# === Security/Compliance keys (заглушки) ===
# Пустые значения безопасны и не детектятся как секреты.
OPENAI_API_KEY=
HF_TOKEN=

# === CI/Tools ===
PIP_DISABLE_PIP_VERSION_CHECK=1
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1

# === Ops/TUI (необязательно) ===
# Интервал обновления мониторинга (сек). По умолчанию 3s в коде; можно переопределить.
OPS_REFRESH=3

